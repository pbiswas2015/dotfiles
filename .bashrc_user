###############################################################################

export EDITOR=nvim
export PATH=~/.local/bin:${PATH}
export MANPATH=~/.local/share/man:${MANPATH}

###############################################################################

# brew
if [ -f /home/linuxbrew/.linuxbrew/bin/brew ]; then
  eval "$(/home/linuxbrew/.linuxbrew/bin/brew shellenv)"
  export HOMEBREW_NO_ANALYTICS=0
fi

# rust and cargo
if [ -f ~/.cargo/env ]; then
    . "$HOME/.cargo/env"
fi

###############################################################################

# set custom prompt
color_prompt=yes
function get_load () {
    echo `uptime | sed 's/.*load average: //' | cut -d, -f1`
}

function get_files_size () {
    total_bytes=0
    for bytes in $(ls -l | grep "^-" | awk '{ print $5 }')
    do
        total_bytes=$total_bytes+$bytes
    done
    total_mb=$(echo -e "scale=0 \n($total_bytes)/1048576 \nquit" | bc)
    total_gb=$(echo -e "scale=0 \n($total_bytes)/1073741824 \nquit" | bc)
    if [ $total_gb -gt 0 ]
    then
        echo "(${total_gb}GB)"
    elif [ $total_mb -gt 0 ]
    then
        echo "(${total_mb}MB)"
    else
        echo ""
    fi
}

# set prompt as [load@time] <basename of directory>$
if [ "$color_prompt" = yes ]; then
    # load in yellow, time in cyan, current directory basename in blue and no color for prompt
    PS1="\[\e[48;5;234m\][\[\e[93m\]\$(get_load)\[\e[92m\]@\[\e[96m\]\$(hostname)\[\e[92m\]]\[\e[95m\]\$(get_files_size) \[\e[38;5;27m\]\W\[\e[92m\]\$\[\e[0m\] "
else
    PS1="[\$(get_load)@\A]\$(get_files_size)\W\$ "
fi

