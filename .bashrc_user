# set terminal title as current directory
#export PROMPT_COMMAND='echo -en "\033]0; $("pwd") \a"'
export PROMPT_COMMAND='echo -en "\033]0; $("whoami")@$("hostname"): $("pwd") \a"'

###############################################################################

# bat
export BAT_PAGER="less -RF"
## set bat as man pager 
export MANPAGER="sh -c 'col -bx | bat -l man -p --theme=\"Visual Studio Dark+\"'"
## highlight --help with bat
alias bathelp='bat --plain --language=help'
help() {
    "$@" --help 2>&1 | bathelp
}
# replace cat
alias cat='bat --paging=never'

###############################################################################

# fzf
[ -f ~/apps/fzf/fzf.bash ] && source ~/apps/fzf/fzf.bash
[ -f ~/apps/fzf/fzf-git/fzf-git.sh ] && source ~/apps/fzf/fzf-git/fzf-git.sh
export FZF_DEFAULT_COMMAND='fd --type f --strip-cwd-prefix --hidden --follow --exclude .git'
## fzf theme - tomasr/molokai
export FZF_DEFAULT_OPTS='-x -m --height 60% --layout=reverse --info=inline-right --border --preview "[ -f {} ] && bat --color=always --style=numbers --line-range=:500 {}" --color=bg+:#293739,bg:#1B1D1E,border:#808080,spinner:#E6DB74,hl:#7E8E91,fg:#F8F8F2,header:#7E8E91,info:#A6E22E,pointer:#A6E22E,marker:#F92672,fg+:#F8F8F2,prompt:#F92672,hl+:#F92672'
export FZF_TMUX_OPTS='-p 80%,60%'
export CHEAT_USE_FZF=true

###############################################################################

# skim
export SKIM_DEFAULT_COMMAND='fd --type f --strip-cwd-prefix --hidden --follow --exclude .git'
alias sk='sk -x -m --height 60% --layout=reverse --inline-info --border --preview "[ -f {} ] && bat --color=always --style=numbers --line-range=:500 {}" --color=bg+:#293739,bg:#1B1D1E,border:#808080,spinner:#E6DB74,hl:#7E8E91,fg:#F8F8F2,header:#7E8E91,info:#A6E22E,pointer:#A6E22E,marker:#F92672,fg+:#F8F8F2,prompt:#F92672,hl+:#F92672'

###############################################################################

# tere
tere() {
  local result=$(command tere -G --files hide --mouse=on -m enter:ChangeDirAndExit "$@")
  [ -n "$result" ] && cd "$result"
}
alias t=tere

###############################################################################

# ripgrep
export RIPGREP_CONFIG_PATH=~/.config/ripgrep/ripgreprc

# forgit
[ -f ~/apps/forgit/latest/forgit.plugin.sh ] && source ~/apps/forgit/latest/forgit.plugin.sh

# bashmarks
[ -f ~/apps/bashmarks/bashmarks.sh ] && source ~/apps/bashmarks/bashmarks.sh

# q
#[ -f ~/apps/q/q.sh ] && source ~/apps/q/q.sh

###############################################################################

# work specific
[ -f ~/.bashrc_work ] && source ~/.bashrc_work

###############################################################################

# direnv
eval "$(direnv hook bash)"

# cod
source <(cod init $$ bash)

# fasd
fasd_cache="$HOME/.fasd-init.bash"
if [ "$(command -v fasd)" -nt "$fasd_cache" -o ! -s "$fasd_cache" ]; then
  fasd --init posix-alias bash-hook bash-ccomp bash-ccomp-install >| "$fasd_cache"
fi
source "$fasd_cache"
unset fasd_cache
unalias sd

# zoxide
export _ZO_ECHO=1
eval "$(zoxide init --cmd cd bash)"

# mcfly
export MCFLY_FUZZY=4
export MCFLY_RESULTS=50
export MCFLY_HISTORY_LIMIT=10000
export MCFLY_KEY_SCHEME=vim
eval "$(mcfly init bash)"

###############################################################################

# alias
[ -f ~/.alias.bash ] && source ~/.alias.bash

# completion
[ -f ~/.local/share/bash-completion/complete.bash ] && source ~/.local/share/bash-completion/complete.bash

###############################################################################

# starship
eval "$(starship init bash)"

